<?xml version="1.0"?>
<config>

  <!-- servers: define servers and channels to be connected -->

  <server name="ozinger"
          hostname="irc.ozinger.org"
          port="6667"
          nickname="♠"
          username="GNOMERELAY"
          realname="그놈릴레이 TWISTED"
          encoding="UTF-8" >
    <channel channel="#gnome" />
  </server>

  <server name="hanirc"
          hostname="irc.hanirc.org"
          port="6667"
          nickname="♣"
          username="GNOMERELAY"
          realname="그놈릴레이 TWISTED"
          encoding="CP949" >
    <channel channel="#gnome" />
  </server>

  <!--
      relay groups: define how to relay messages

      outputformat attribute is a Python template string with
      ${nickname}, ${servername}, ${channel}, ${message}.
  -->

  <relaygroup name="gnome_is_gnoem">
    <node server="ozinger"
          channel="#gnome"
          inputenable="true"
          outputenable="true"
          outputformat="&lt;${nickname}@${servername}/${channel}&gt; ${message}" />
    <node server="hanirc"
          channel="#gnome"
          inputenable="true"
          outputenable="true"
          outputformat="&lt;${nickname}@${servername}/${channel}&gt; ${message}" />
  </relaygroup>

</config>
